extends base.pug

block style 
    style 
        include ../static/style.css
        include ../static/contact-style.css 

block content 
    div#contbef
        div#contact-form
            h3 Contact Us
            form(action="/contact", method="post") 
                input(type="text", class="input" ,name="name", placeholder="Enter your name")
                input(type="phone", class="input" ,name="phone", placeholder="Enter your Contact number")
                input(type="number", class="input" ,name="age", placeholder="Enter your age")
                input(type="email", class="input" ,name="email", placeholder="Enter your email")
                input(type="text", class="input" ,name="address", placeholder="Enter your address")
                textarea#more-aboutme.input(name="description", cols="10", rows="10", placeholder="Write your dance skills and what type of dance you want to learn...") 
                button.sub-but 
                    |   Submit
